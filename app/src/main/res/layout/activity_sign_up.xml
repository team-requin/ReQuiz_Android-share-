<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up">

    <EditText
        android:id="@+id/Signup_Nickname"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Nickname"
        android:inputType="textPersonName"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/Nickname_check_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="199dp"
        android:layout_height="77dp"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:text="SIGNUP"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signup_ID2"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/ID_check_button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Signup_Nickname"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ID_check_button2"
        android:layout_width="83dp"
        android:layout_height="53dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="check"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signup_ID2"
        app:layout_constraintTop_toBottomOf="@+id/Nickname_check_button"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Nickname_check_button"
        android:layout_width="83dp"
        android:layout_height="53dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="check"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Signup_Nickname"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Signup_pw_confirm"
        android:layout_width="353dp"
        android:layout_height="58dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Signup_Password"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Signup_Password"
        android:layout_width="353dp"
        android:layout_height="58dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_ID2"
        tools:ignore="MissingConstraints" />

    <Button

        android:id="@+id/Signup_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="198dp"
        android:layout_height="65dp"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:text="Complete"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Signup_pw_confirm" />

</android.support.constraint.ConstraintLayout>