<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Quiz_list_owner"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/header"
            android:layout_marginLeft="300dp"
            android:text="로그아웃" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fix"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_below="@+id/header">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:id="@+id/profile_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="NAME : ADMIN" />

            <TextView
                android:id="@+id/email_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="ID : XXXXX@naver.com" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/mypage_button"
        android:layout_below="@+id/fix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="-4dp"
        android:background="@drawable/border_button"
        android:text="수정하기"
        android:textColor="#ffffffff" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mypage_button"
        android:id="@+id/list1"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_marginRight="10sp"
            android:text="1번 리스트"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="수정"
            android:layout_weight="0.01"
            android:textColor="#ffffffff"
            android:background="@drawable/border_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list1"
        android:id="@+id/list2"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_marginRight="10sp"
            android:text="2번 리스트"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="수정"
            android:layout_weight="0.01"
            android:textColor="#ffffffff"
            android:background="@drawable/border_button"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list2"
        android:id="@+id/list3"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_marginRight="10sp"
            android:textStyle="bold "
            android:text="3번 리스트"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="수정"
            android:layout_weight="0.01"
            android:textColor="#ffffffff"
            android:background="@drawable/border_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list3"
        android:id="@+id/list4"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10sp"
            android:layout_weight="0.99"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="4번 리스트"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="수정"
            android:layout_weight="0.01"
            android:textColor="#ffffffff"
            android:background="@drawable/border_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list4"
        android:id="@+id/list5"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_marginRight="10sp"
            android:textStyle="bold"
            android:text="5번 리스트"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="수정"
            android:layout_weight="0.01"
            android:textColor="#ffffffff"
            android:background="@drawable/border_button"/>
    </LinearLayout>

    <Button
        android:layout_below="@+id/list5"
        android:id="@+id/view_more"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:text="더보기"
        android:background="@drawable/border_button"
        android:textColor="#ffffffff" />
</RelativeLayout>